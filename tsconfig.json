{
  "compilerOptions": {
    "target" : "es6" ,
    "module": "commonjs",
    "emitDecoratorMetadata" : true ,
    "experimentalDecorators" : true ,
    "lib": [
      "dom",
      "es6"
    ],
    "removeComments" : false ,
    "esModuleInterop": true,
    "noImplicitAny" : false ,
    "suppressImplicitAnyIndexErrors" : true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}